<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_header">
        <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="116dp"
                app:contentScrim="@drawable/gradient_header"
                android:id="@+id/collapsingToolBar"
                app:expandedTitleGravity="top"
                app:expandedTitleMarginTop="22dp"
                app:expandedTitleMarginStart="27dp"
                app:expandedTitleTextAppearance="@style/expanded"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
                app:scrimAnimationDuration="150">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="116dp"
                    android:orientation="vertical">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginStart="27dp"
                        android:layout_marginTop="22dp"
                        android:textSize="32sp"
                        android:textColor="#ff00ff"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="27dp"
                        android:id="@+id/description"
                        android:textSize="14sp"
                        android:text="회원가입을 할 수 있어요"
                        android:textColor="@color/colorText"/>
            </LinearLayout>

            <androidx.appcompat.widget.Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:gravity="top"
                    app:layout_collapseMode="pin"
                    android:id="@+id/toolBar">
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.CollapsingToolbarLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorDivDay"/>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:clipToPadding="false">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/gradient_contents">

            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="27dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="27dp"
                    app:cardCornerRadius="12dp"
                    app:cardBackgroundColor="@color/cardBg"
                    app:cardElevation="@dimen/cardElevation">

                <LinearLayout
                        android:layout_width="match_parent" android:layout_height="match_parent"
                        android:layout_margin="18dp" android:orientation="vertical">
                    <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:hintTextAppearance="@style/TextInputLayoutHintText"
                            android:layout_marginBottom="12dp"
                            android:id="@+id/textInputId">
                        <EditText
                                android:id="@+id/etId"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:singleLine="true"
                                android:hint="@string/id"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:hintTextAppearance="@style/TextInputLayoutHintText"
                            android:layout_marginBottom="12dp"
                            app:passwordToggleEnabled="true">
                        <EditText
                                android:id="@+id/etPwd"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:inputType="textPassword"
                                android:singleLine="true"
                                android:hint="@string/pwd"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:hintTextAppearance="@style/TextInputLayoutHintText"
                            android:layout_marginBottom="12dp">
                        <EditText
                                android:id="@+id/etName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:singleLine="true"
                                android:hint="@string/name"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="회원 유형"
                            android:textSize="12sp"
                            android:textColor="#9C9CA7"
                            android:textStyle="bold"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="4dp"
                            android:layout_marginBottom="8dp"/>
                    <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:id="@+id/radioGroup">
                        <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/lead_teacher"
                                android:id="@+id/radioLead"
                                android:layout_weight="1.2"/>
                        <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/class_teacher"
                                android:id="@+id/radioHr"
                                android:layout_weight="0.8"/>
                    </RadioGroup>
                    <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:visibility="gone"
                            android:id="@+id/textInputClass"
                            app:hintTextAppearance="@style/TextInputLayoutHintText">
                        <EditText
                                android:id="@+id/etClass"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:singleLine="true"
                                android:hint="@string/class_name"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="27dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="27dp"
                    app:cardCornerRadius="12dp"
                    app:cardBackgroundColor="@color/cardBg"
                    app:cardElevation="@dimen/cardElevation">

                <LinearLayout
                        android:layout_width="match_parent" android:layout_height="match_parent"
                        android:layout_margin="18dp" android:orientation="vertical">
                    <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:hintTextAppearance="@style/TextInputLayoutHintText">
                        <EditText
                                android:id="@+id/etNum"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:singleLine="true"
                                android:hint="@string/phone"
                                android:inputType="phone"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:hintTextAppearance="@style/TextInputLayoutHintText"
                            android:id="@+id/textInputCode"
                            android:layout_marginTop="12dp">
                        <EditText
                                android:id="@+id/etCode"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:singleLine="true"
                                android:inputType="numberDecimal"
                                android:hint="@string/verificationNo"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginTop="16dp"
                                app:cardCornerRadius="12dp"
                                app:cardBackgroundColor="@color/colorAccent"
                                android:clickable="true"
                                android:focusable="true"
                                android:foreground="?attr/selectableItemBackground"
                                android:id="@+id/send"
                                android:layout_marginEnd="8dp">
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="전송"
                                    android:textColor="@color/colorText"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:layout_margin="16dp"
                                    android:layout_gravity="center"/>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginTop="16dp"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="0dp"
                                app:cardBackgroundColor="@color/colorText11"
                                android:foreground="?attr/selectableItemBackground"
                                android:id="@+id/check"
                                android:layout_marginStart="8dp">
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="인증"
                                    android:id="@+id/textAuth"
                                    android:textColor="@color/colorText55"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:layout_margin="16dp"
                                    android:layout_gravity="center"/>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="27dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="27dp"
                    android:layout_marginStart="27dp"
                    android:clickable="false"
                    android:focusable="false"
                    app:cardCornerRadius="12dp"
                    app:cardBackgroundColor="@color/colorText11"
                    app:cardElevation="0dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:id="@+id/signup">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/signup"
                        android:id="@+id/textSignUp"
                        android:textColor="@color/colorText55"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_margin="16dp"
                        android:layout_gravity="center"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>