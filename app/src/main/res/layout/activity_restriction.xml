<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".Activity.RestrictionActivity">
    <LinearLayout android:layout_width="match_parent" android:layout_height="116dp"
                  android:background="@drawable/gradient_header">
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/restriction"
                    android:textStyle="bold"
                    android:layout_marginStart="27dp"
                    android:layout_marginTop="22dp"
                    android:textSize="32sp"
                    android:textColor="#fff"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/description_restriction"
                    android:layout_marginStart="27dp"
                    android:textSize="14sp"
                    android:textColor="#fff"/>
        </LinearLayout>

        <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="저장"
                android:id="@+id/save"
                android:padding="8dp"
                android:textColor="@color/colorAccent"
                android:layout_marginEnd="18dp"
                android:textSize="14sp"
                android:layout_marginTop="24dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_contents"
            android:orientation="vertical">

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="27dp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="27dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="#323445"
                app:cardElevation="10dp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                <FrameLayout
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:background="@drawable/shape_circle"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="12dp"
                        android:layout_gravity="center_vertical">
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_school"
                            android:layout_gravity="center"/>
                </FrameLayout>
                <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
                              android:layout_weight="1"
                              android:orientation="vertical" android:layout_gravity="center_vertical">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/in_class"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="#fff"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="4dp"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/description_class"
                            android:layout_weight="0"
                            android:textSize="12sp"
                            android:textColor="#fff"
                            android:layout_marginBottom="20dp"/>

                </LinearLayout>

                <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:layout_gravity="center_vertical|end"
                        android:id="@+id/radioIn"
                        android:layout_margin="16dp"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="27dp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="27dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="#323445"
                app:cardElevation="10dp">

            <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                    <FrameLayout
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:background="@drawable/shape_circle"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="12dp"
                            android:layout_gravity="center_vertical">
                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_outside"
                                android:layout_gravity="center"/>
                    </FrameLayout>
                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/out_class"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:textColor="#fff"
                                android:layout_marginTop="20dp"
                                android:layout_marginBottom="4dp"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/description_out"
                                android:textSize="12sp"
                                android:layout_marginBottom="20dp"
                                android:textColor="#fff"/>

                    </LinearLayout>

                    <RadioButton
                            android:layout_weight="0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|end"
                            android:id="@+id/radioOut"
                            android:layout_margin="16dp"/>
                </LinearLayout>

                <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#3FFFFFFF"
                        android:layout_marginBottom="16dp"
                        android:layout_marginStart="76dp"
                        android:layout_marginEnd="16dp"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="제한 범위"
                        android:layout_marginStart="76dp"
                        android:textColor="#B3FFFFFF"
                        android:textSize="12sp"/>

                <com.warkiz.widget.IndicatorSeekBar
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="60dp"
                        android:layout_marginBottom="2dp"
                        android:id="@+id/seekBar"
                        app:isb_max="30"
                        app:isb_min="5"
                        app:isb_progress="25"
                        app:isb_seek_smoothly="true"
                        app:isb_thumb_color="@color/colorAccent"
                        app:isb_thumb_size="12dp"
                        app:isb_show_indicator="circular_bubble"
                        app:isb_indicator_color="@color/colorAccent"
                        app:isb_indicator_text_color="#fff"
                        app:isb_indicator_text_size="16sp"
                        app:isb_track_background_color="#4DFFFFFF"
                        app:isb_track_background_size="2dp"
                        app:isb_track_progress_color="@color/colorAccent"
                        app:isb_track_progress_size="2dp"
                        app:isb_only_thumb_draggable="false"/>

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:layout_marginEnd="16dp" android:layout_marginBottom="18dp">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5m"
                            android:layout_marginStart="76dp"
                            android:textColor="#B3FFFFFF"
                            android:textSize="12sp"/>
                    <View android:layout_width="0dp" android:layout_height="match_parent"
                          android:layout_weight="1"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="30m"
                            android:layout_marginStart="76dp"
                            android:textColor="#B3FFFFFF"
                            android:textSize="12sp"/>
                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>