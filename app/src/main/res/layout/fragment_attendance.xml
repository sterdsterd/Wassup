<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView android:layout_height="match_parent"
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:fillViewport="true">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_contents">

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:layout_marginEnd="27dp"
                android:layout_marginStart="27dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="#323445"
                app:cardElevation="10dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:id="@+id/cardAbs">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                <FrameLayout
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:background="@drawable/shape_circle"
                        android:layout_margin="16dp">
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_warning"
                            android:tint="#fff"
                            android:layout_gravity="center"/>
                </FrameLayout>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:text="@string/absent"
                        android:layout_gravity="center_vertical"
                        android:textColor="#fff"/>

                <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1"/>

                <FrameLayout
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:background="@drawable/shape_badge"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="12dp"
                        android:id="@+id/badgeBg">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#fff"
                            android:id="@+id/badgeText"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:text="0"/>
                </FrameLayout>

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_enter"
                        android:layout_gravity="center_vertical"
                        android:elevation="12dp"
                        android:layout_marginEnd="16dp"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#33ffffff"
                android:layout_marginStart="27dp"
                android:layout_marginEnd="27dp"
                android:layout_marginTop="16dp"/>

        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/attendanceList">
        </androidx.recyclerview.widget.RecyclerView>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아래의 '+' 버튼을 눌러 작업을 추가해보세요"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:id="@+id/tvEmpty"
                android:visibility="gone"
                android:textColor="#fff"
                android:textStyle="bold"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>